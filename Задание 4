import random as r
print("Викторина")
print("Введите с большой буквы названия стоиц предложенных стран")
print("Чтобы закончить введите Stop")
plus = 0
minus = 0
hochet = True
strani = dict(
    США = "Вашингтон",
    Канада = "Оттава",
    Россия = "Москва",
    Япония = "Токио",
    Польша = "Варшава",
    Кипр = "Никосия",
    Исландия = "Рейкьявик",
    Мексика = "Мехико",
    Алжир = "Алжир",
    Чехия = "Прага",
    Ирландия = "Дублин",
    Румыния = "Бухарест",
    Эстония = "Таллин",
    Финляндия = "Хельсинки",
    Куба = "Гавана",
    Уганда = "Кампала",
    Южная_Корея = "Сеул")
while hochet:
country, stolit = r.choice(list(strani.items()))
print(country)
otvet = str(input("Столица "))
if otvet == "Stop":
print("Игра окончена")
hochet = False
break
else:
if otvet == stolit:
print("Правильно!")
plus += 1
else:
print("Неверно! Ответ:",stolit)
minus += 1
print("Счёт: +:", plus," -:", minus)
